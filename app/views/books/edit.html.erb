<div class="col-md-6 col-md-offset-3">

	<div class="edit-book-form">          
          
          <h1>Edit Book</h1>
          <%= simple_form_for @book, :html => { :multipart => true } do |f| %>
               <%= f.select :category_id, @categories %>
               <%= f.file_field :book_img %>
               <%= f.input :title, label: "ชื่อหนังสือ / Book Title" %>
               <%= f.input :description, label: "เรื่องย่อ / Description" %>
               <%= f.input :author, label: "นักเขียน / Author" %>
               <%= f.button :submit %>
          <% end %>
     </div>

</div>